{
  "name": "@openspv/lib",
  "description": "Bitcoin data structures and cryptographic algorithms.",
  "version": "1.1.0",
  "author": "Coasian",
  "homepage": "https://github.com/openspv/openspv",
  "main": "./index.mjs",
  "exports": "./index.mjs",
  "type": "module",
  "scripts": {
    "lint": "standard *.mjs *.cjs 'src/**/*.mjs' 'bin/**/*.cjs' 'test/**/*.mjs'",
    "pretest": "yarn run lint",
    "test:mocha": "mocha",
    "test": "yarn run pretest && yarn run test:mocha"
  },
  "keywords": [
    "bitcoin",
    "bsv",
    "spv"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/openspv/openspv.git"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@openspv/elliptic": "7.0.1",
    "aes": "0.1.0",
    "bn.js": "5.2.0",
    "bs58": "4.0.1",
    "hash.js": "1.1.7",
    "is-hex": "1.1.3",
    "pbkdf2": "3.1.2",
    "randombytes": "2.1.0"
  },
  "devDependencies": {
    "mocha": "8.3.1",
    "should": "13.2.3",
    "sinon": "9.2.4",
    "standard": "16.0.4"
  },
  "license": "MIT",
  "standard": {
    "ignore": [
      "src/interp.mjs",
      "test/aes.mjs",
      "test/aescbc.mjs",
      "test/bip-39.mjs",
      "test/block.mjs",
      "test/ecdsa.mjs",
      "test/hash.mjs",
      "test/interp.mjs",
      "test/script.mjs",
      "test/sig.mjs",
      "test/tx-verifier.mjs",
      "test/tx.mjs"
    ]
  },
  "packageManager": "yarn@3.0.2"
